<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 启用动态方法的调用 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
     <!-- 配置struts2默认上传文件大小为10M -->
    <constant name="struts.multipart.maxSize" value="10485760" />   
     
    <package name="default" namespace="/" extends="struts-default"></package>
    <package name="filemanager" extends="default">
   	   <action name="file" class="com.qhit.lh.g4.hsj.t7.action.FileAction">
   	        <interceptor-ref name="defaultStack">
   	           <param name="fileUpload.allowedExtensions">.txt,.zip,.jpg,.png</param>
   	           <param name="fileUpload.maximumSize">10304575</param>
   	        </interceptor-ref>
   			<result name="uploadSuccess">/jsp/allfile.jsp</result>
   			<result name="input">index.jsp</result>
   		</action>
   	</package>

</struts>
